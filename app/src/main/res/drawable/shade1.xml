<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="100dp" />
            <gradient
                android:angle="-45"
                android:endColor="@color/color02"
                android:startColor="@color/color01" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="100dp" />
            <gradient
                android:angle="-45"
                android:endColor="@color/color22"
                android:startColor="@color/color21" />
        </shape>
    </item>



    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomRightRadius="100dp"
                android:topLeftRadius="100dp" />
            <gradient
                android:angle="-45"
                android:endColor="@color/color11"
                android:startColor="@color/color12" />
        </shape>
    </item>

</layer-list>